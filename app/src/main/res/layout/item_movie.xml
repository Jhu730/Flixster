<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="false"
    android:background="#E1000000"
    android:backgroundTint="#101010"
    android:outlineProvider="none">

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="143dp"
        android:layout_height="195dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:clickable="true"
        android:transitionName="transPic"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTitle"
        android:transitionName="transTitle"
        android:layout_width="258dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="2dp"
        android:layout_toEndOf="@+id/ivPoster"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/textview"
        android:textAlignment="center"
        android:textColor="#7AD610"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Wonder Woman 1984" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="257dp"
        android:layout_height="129dp"
        android:layout_alignTop="@+id/tvTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="6dp"
        android:layout_toEndOf="@+id/ivPoster"
        android:fontFamily="sans-serif-light"
        android:textAlignment="viewStart"
        android:textColor="#70BC19"
        android:textSize="16sp"
        android:transitionName="transOverview"
        tools:text="Wonder Woman comes into conflict with the Soviet Union during the Cold War in the 1980s and finds a formidable foe by the name of the Cheetah" />

</RelativeLayout>
